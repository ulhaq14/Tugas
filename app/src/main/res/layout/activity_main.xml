<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kalkulatorr">

    <EditText
        android:id="@+id/inputangkake1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkang angka ke-1 :"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/inputangkake2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Masukkan angka ke-2 :"
        />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonke1"
            android:textSize="70sp"
            android:text="+"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonke2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="70sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonke3"
            android:textSize="70sp"
            android:text="x"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonke4"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="70sp" />

    </LinearLayout>



    <TextView
        android:id="@+id/untukhasil"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textSize="40dp"
        android:text="Hasil = "
        android:layout_width="380dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="420dp"
        android:text="Kalkulator Sederhana" />

    <TextView
        android:textSize="25sp"
        android:id="@+id/tvuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:text="User :" />



</LinearLayout>